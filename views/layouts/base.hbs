<body ng-controller="mainController">
<nav class="white" role="navigation">
    <div class="nav-wrapper container">
        <a id="logo-container" href="#/" class="brand-logo">Aparata Test</a>
        <ul class="right hide-on-med-and-down valign-wrapper" style="height: 100%;">
            <li class="valign">
                {{#if user}}
                    <a href="/logout" class="btn waves-effect waves-light teal lighten-1">Logout {{user.displayName}}</a>
                {{else}}
                    <a ng-click="showLogin()" class="btn waves-effect waves-light teal lighten-1">Login</a>
                {{/if}}
            </li>
        </ul>

        <ul id="nav-mobile" class="side-nav">
            <li><a href="#"><i class="fa fa-home"></i> Home</a></li>
            <li><a href="#about"><i class="fa fa-shield"></i> About</a></li>
            <li><a href="#contact"><i class="fa fa-comment"></i> Contact</a></li>

        </ul>
        <a href="/login" data-activates="nav-mobile" class="button-collapse"><i class="material-icons">menu</i></a>
    </div>
</nav>

<login-modal hide ng-show="showLoginModal"></login-modal>

<div ng-view></div>

<footer class="page-footer teal">
    <div class="container">
        <div class="row">
            <div class="col l6 s12">
                <h5 class="white-text">Company Bio</h5>
                <p class="grey-text text-lighten-4">We are a team of college students working on this project like it's our full time job. Any amount would help support and continue development on this project and is greatly appreciated.</p>


            </div>
            <div class="col l3 s12">
                <h5 class="white-text">Settings</h5>
                <ul>
                    <li><a class="white-text" href="#!">Link 1</a></li>
                    <li><a class="white-text" href="#!">Link 2</a></li>
                    <li><a class="white-text" href="#!">Link 3</a></li>
                    <li><a class="white-text" href="#!">Link 4</a></li>
                </ul>
            </div>
            <div class="col l3 s12">
                <h5 class="white-text">Connect</h5>
                <ul>
                    <li><a class="white-text" href="#!">Link 1</a></li>
                    <li><a class="white-text" href="#!">Link 2</a></li>
                    <li><a class="white-text" href="#!">Link 3</a></li>
                    <li><a class="white-text" href="#!">Link 4</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="footer-copyright"></div>
</footer>


